//Declarations
int counter;
int a;
int b;
int c;
float floatNumber;
bool isCorrect;
bool isFalse;
$debug("Declarations end");

//Declaration with Assignments
int counter2 = 0;
string text = "Hallo";
int array[3] = {1, 2, 3};
const Fix = 12; 
$debug("Declarations with Assignments end");

//Assignments
isCorrect = true;
isFalse = FLASE;
a = 0; 
$debug("Assignments end");

//Controlblock
IF isCorrect THEN 
	a = 1; 
	b = 2; 
	floatNumber = -1.123;
 ELSEIF isFalse THEN 
	a = -1;
	b = -2; 
	c = a + b; 
 ELSE 
 	floatNumber = a - b; 
END 

WHILE a == 1 THEN 
	isCorrect = false;
	isFalse = 1; 
	a = a + 1; 
END 

WHILE b > 0 THEN 
	array[1] = 5; 
	isCorrect = true; 
	isFalse = 0; 
	b = b + 1; 
END 

$debug("Controlblock end");

